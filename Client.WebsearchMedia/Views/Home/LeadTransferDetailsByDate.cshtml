@model IEnumerable<EntityObjects.Objects.TransferLog>

@{
    ViewBag.Title = "Index";
    Layout = "~/views/shared/_layoutdesboard.cshtml";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="row" id="main">
        <div class="col-sm-12 col-md-12 well" id="content">
            <div class="row">
                <div class="col-md-6">
                    <h1>Welcome Admin!</h1>
                </div>
                <div class="col-md-6">
                    @using (Html.BeginForm("LeadTransferDetailsByDate", "home", FormMethod.Post))
            { <select class="form-group" name="dateRange">
                        <option value="1">ToDay</option>
                        <option value="2">YesterDay</option>
                        <option selected value="3">This Week</option>
                        <option value="4">Last Week</option>
                        <option value="5">This Month</option>
                        <option value="6">Last Month</option>


                    </select>
                    <input type="submit" class="btn-default" name="Submit" value="Submit" />
                    }
                </div>
            </div>
            <table id="leadByDateTransDetals" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>
                          BuyerName
                        </th>
                        @*<th>
                            Title
                        </th>*@
                        <th>
                           GeneratedDatetime
                        </th>
                        <th>
                          TransferDatetime
                        </th>
                        <th>
                           Description
                        </th>
                        <th>
                           IsActualPrice
                        </th>
                        <th>
                            BuyerReturnLeadId
                        </th>
                        <th>
                            model.Return
                        </th>
                        <th>
                           Price
                        </th>
                        <th>
                           model.Status
                        </th>
                        
                        
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        var buyerName = item.BuyerMasterId == 1 ? "VM" : "Nick";
                        <tr>
                            <td>
                              
                                @buyerName
                            </td>
                            @*<td>
                                @item.CommonLeadId
                            </td>*@
                            <td>
                                @item.GeneratedDatetime
                            </td>
                            <td>
                                @item.TransferDatetime
                            </td>
                            <td>
                                @item.Description
                            </td>
                            <td>
                                @item.IsActualPrice
                            </td>
                            <td>
                                @item.BuyerReturnLeadId
                            </td>
                            <td>
                                @item.Return
                            </td>
                            <td>
                             @item.Price
                            </td>
                            <td>
                                @item.Status
                            </td>
                            
                            
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!-- /.row -->
</div>
<script type="text/javascript">
    $(function () {
        $('#leadByDateTransDetals').DataTable();
        $('[data-toggle="tooltip"]').tooltip();
        $(".side-nav .collapse").on("hide.bs.collapse", function () {
            $(this).prev().find(".fa").eq(1).removeClass("fa-angle-right").addClass("fa-angle-down");
        });
        $('.side-nav .collapse').on("show.bs.collapse", function () {
            $(this).prev().find(".fa").eq(1).removeClass("fa-angle-down").addClass("fa-angle-right");
        });
    });
</script>